{
  "name": "digimaker-cli",
  "version": "0.1.0",
  "description": "CLI tool to convert .docx lesson sheets into stylised PDFs",
  "main": "dist/cli/src/lib.js",
  "types": "dist/cli/src/lib.d.ts",
  "type": "module",
  "bin": {
    "digimaker": "./dist/cli/src/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/cli/src/lib.d.ts",
      "import": "./dist/cli/src/lib.js"
    },
    "./types": {
      "types": "./dist/types/lesson.d.ts"
    }
  },
  "scripts": {
    "build": "npm run build:frontend && npm run build:cli && npm run copy:frontend",
    "build:frontend": "cd ../frontend && npm run build",
    "build:cli": "tsc",
    "copy:frontend": "rm -rf dist/frontend && cp -r ../frontend/dist/frontend/browser dist/frontend",
    "prepublishOnly": "npm run build",
    "start": "node dist/cli/src/index.js",
    "dev": "tsx src/index.ts",
    "test": "tsx src/index.ts generate --debug"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "express": "^4.21.0",
    "pino": "^10.2.0",
    "pino-pretty": "^13.1.3",
    "puppeteer": "^23.0.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "24.0.0",
    "@types/yargs": "^17.0.33",
    "tsx": "^4.19.0",
    "typescript": "^5.5.0"
  },
  "keywords": [
    "pdf",
    "docx",
    "lesson-sheets",
    "digimaker"
  ],
  "license": "MIT"
}
