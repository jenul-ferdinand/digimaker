{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "resolveJsonModule": true,
    "paths": {
      "@common-types/*": ["../types/*"]
    }
  },
  "include": ["src/**/*", "../types/*"],
  "exclude": ["node_modules", "dist"]
}
