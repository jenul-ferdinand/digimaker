{
  "name": "@digimakers/cli",
  "version": "0.3.43",
  "description": "CLI tool to convert .docx lesson sheets into stylised PDFs",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "digimaker": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run bundle-frontend",
    "bundle-frontend": "node scripts/bundle-frontend.js",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "pdf-to-png": "node scripts/pdf-to-png.js",
    "docling-cleaner": "node scripts/run-docling-cleaner.js",
    "docling-cleaner:save": "node scripts/run-docling-cleaner.js > output/docling-output.txt",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@digimakers/core": "0.3.43",
    "yargs": "18.0.0"
  },
  "devDependencies": {
    "@types/node": "24.0.0",
    "@types/yargs": "^17.0.33",
    "tsx": "^4.19.0",
    "typescript": "^5.5.0"
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "pdf",
    "docx",
    "lesson-sheets",
    "digimaker",
    "cli",
    "converter"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jenul-ferdinand/digimaker.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/jenul-ferdinand/digimaker/issues"
  },
  "homepage": "https://github.com/jenul-ferdinand/digimaker#readme",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
