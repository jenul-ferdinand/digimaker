{
  "name": "@digimaker/cli",
  "version": "0.1.0",
  "description": "CLI tool to convert .docx lesson sheets into stylised PDFs",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "digimaker": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@digimaker/core": "*",
    "yargs": "18.0.0"
  },
  "devDependencies": {
    "@types/node": "24.0.0",
    "@types/yargs": "^17.0.33",
    "tsx": "^4.19.0",
    "typescript": "^5.5.0"
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "pdf",
    "docx",
    "lesson-sheets",
    "digimaker",
    "cli"
  ],
  "license": "MIT"
}
